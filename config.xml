<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devilspath.game" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Devil's Path</name>
    <description>
        A rage-platformer with 30 levels and twists.
    </description>
    <author email="dev@example.com" href="http://example.com">
        Game Developer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Orientation" value="landscape" />
        <preference name="Fullscreen" value="true" />
        <preference name="BackgroundColor" value="0xff222222" />
        <preference name="KeepRunning" value="true" />
        <preference name="ShowTitle" value="false" />
        <preference name="AndroidXEnabled" value="true" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Orientation" value="landscape" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
</widget>